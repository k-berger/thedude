NoCli
BitMap 0,320,256,5
BitMap 1,320,256,5


#DUDE_HEIGHT=8
#DUDE_WIDTH=7

LoadBitMap 0,"amiga:thedude/assets/shapes_wip.pic",0

Use BitMap 0

; Cut the shapes we need for the gameplay


For x = 0 To 2
  GetaShape x,(x*#DUDE_WIDTH)+x+1, 1, #DUDE_WIDTH, #DUDE_HEIGHT
Next


For x = 0 To 2
  GetaShape x+2,((2-x)*#DUDE_WIDTH)+(2-x)+1, 1, #DUDE_WIDTH, #DUDE_HEIGHT
Next

BLITZ

Slice 0,44,320,256,$fff8,5,0,32,320,320
Show 0
Use Palette 0


bitm.b=0

NEWTYPE .dude
 x.q
 y.q
 s.b
End NEWTYPE

dudeShape = 0

shapeIndex = 0
shapeDelta = 1

posX = 20

While(Joyb(0)=0)
  Blit shapeIndex,posX,50
  Gosub doubleBuf
  shapeIndex = shapeIndex+shapeDelta
  If shapeIndex = 3 OR shapeIndex=-1
    shapeDelta = shapeDelta * -1
    shapeIndex = shapeIndex+shapeDelta
  End If

  VWait
  If posX=300
    posX=20
  End If
Wend
End


doubleBuf:
  Show bitm
  bitm = 1-bitm
  Use BitMap bitm
  Cls
Return

